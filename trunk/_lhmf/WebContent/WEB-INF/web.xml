  <filter>
      <filter-name>LoginFilter</filter-name>
      <filter-class>it.polito.ai.lhmf.filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>LoginFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>